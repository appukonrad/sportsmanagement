        <field
            name="picture"
            type="media"
            default=""				
            label="COM_SPORTSMANAGEMENT_ADMIN_DIVISION_EDIT_PICTURE"
            description="COM_SPORTSMANAGEMENT_ADMIN_DIVISION_EDIT_PICTURE"
            class="inputbox"
            preview="show"				
            directory=""
        />
				
        <field
            name="cr_picture"
            type="text"
            label="COM_SPORTSMANAGEMENT_ADMIN_DIVISION_PICTURE_CR"
